RewriteEngine on
RewriteRule ^beers/?$ controller.php?%{QUERY_STRING}
RewriteRule ^beers/([0-9]+)$ controller.php?id=$1&%{QUERY_STRING}
RewriteRule ^ingredients/?$ controller.php?%{QUERY_STRING}
RewriteRule ^ingredients/([0-9]+)$ controller.php?id=$1&%{QUERY_STRING}
RewriteRule ^beers/([0-9]+)/ingredients/([0-9]+)$ controller.php?beer_id=$1&ingredient_id=$2 [QSA,L]

